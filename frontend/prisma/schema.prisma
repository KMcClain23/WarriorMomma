// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Vercel adds DATABASE_URL automatically when you link the DB.
  url      = env("DATABASE_URL")
}

enum Section {
  library
  recommended
  upcoming
}

model Book {
  id              String    @id @default(uuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  title           String
  author          String?   @db.Text
  genres          String[]  @db.Text      // TEXT[] in Postgres
  spice           Int       @default(0)   // 0..5
  isRead          Boolean   @default(false)
  isTbr           Boolean   @default(false)
  release_date    String?   @db.Text
  notes           String?   @db.Text

  coverUrl        String?   @db.Text
  cover_image_url String?   @db.Text

  section         Section
}
